<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <h2>Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :name,
                required: true,
                autofocus: true,
                label: "Name",
                label_html: { class: "label"},
                wrapper:false,
                input_html: { class: "input", autocomplete: "name" }%>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                required: true,
                label: "Email",
                label_html: { class: "label"},
                wrapper:false,
                input_html: { class: "input", autocomplete: "email" }%>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label: "Password",
                label_html: { class: "label"},
                wrapper:false,
                input_html: { class: "input", autocomplete: "new-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                required: true,
                label: "Password confirmation",
                label_html: { class: "label"},
                wrapper:false,
                input_html: { class: "input", autocomplete: "new-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Sign up", class:"button is-primary" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
