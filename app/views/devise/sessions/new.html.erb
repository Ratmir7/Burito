<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-one-third">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                required: false,
                autofocus: true,
                label: "Email",
                label_html: { class: "label"},
                wrapper:false,
                input_html: { class: "input", autocomplete: "email" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                  required: false,
                  label: "Password",
                  label_html: { class: "label"},
                  wrapper:false,
                  input_html: { class: "input", autocomplete: "current-password" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Log in", class:"button is-primary"  %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
