<div class="columns is-centered">
  <div class="column is-one-third">
    <%= simple_form_for @ad do |f| %>
      <div class="field">
        <div class="control">
          <%= f.input :title, label: "Title of ad", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :body, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :price, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
      <% if @ad.image.attached? %>
        <%= image_tag @ad.image %>
      <% end %>
      <div class="field">
        <div class="file">
          <span class="file-cta">
            <%= f.input :image, label: "Load file", input_html: { class: "file-input", type: "file" }, wrapper: false, label_html: { class: "file-label" } %>
          </span>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.button :submit, class:"button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
