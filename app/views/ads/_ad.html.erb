  <div class="column is-4">
    <div class="card">
      <div class="card-image">
        <figure class="image">
          <%= link_to ad do %>
            <%# <img src="https://bulma.io/images/placeholders/640x480.png" alt="Placeholder image"> %>
            <%= image_tag ad.image, class: 'img-show', alt: ad.title if ad.image.attached? %>
            <%= image_tag "https://bulma.io/images/placeholders/640x480.png", class: 'img-show', alt: ad.title if !ad.image.attached? %>
          <% end %>
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4"><%= ad.title %></p>
            <p class="subtitle is-6">Price: <%= ad.price %></p>
          </div>
          <div class="media-right">
            <%= link_to "Edit", edit_ad_path(ad) %> </br>
            <%= link_to "Delete", ad_path(ad), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
          </div>
        </div>
        <div class="content">
          <p><%= ad.body %></p>
          <%= verbose_date(ad.created_at) %>
        </div>
      </div>
    </div>
  </div>
